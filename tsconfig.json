{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES2022",
    "removeComments": true,
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["chrome"],
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/*.ts", "src/settings/settings.ts", "src/panel/panel.ts"],
  "exclude": ["node_modules"]
}
